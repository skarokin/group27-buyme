-- Table structure for table `users`
DROP TABLE IF EXISTS `alerts`;
DROP TABLE IF EXISTS `bids`;
DROP TABLE IF EXISTS `items`;
DROP TABLE IF EXISTS `users`;
DROP TABLE IF EXISTS `chat`;
DROP TABLE IF EXISTS `messages`;
DROP TABLE IF EXISTS `payments`;

CREATE TABLE `users` (
  `userID` int AUTO_INCREMENT,
  `email` varchar(50) NOT NULL UNIQUE,
  `username` varchar(100) NOT NULL,
  `password` varchar(50) NOT NULL,
  `balance` int DEFAULT 0,
  `totalSpent` float DEFAULT 0,
  `totalEarned` float DEFAULT 0,
  `role` varchar(25) DEFAULT 'user',
  PRIMARY KEY (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;


CREATE TABLE `items` (
  `itemID` int AUTO_INCREMENT,
  `userID` int NOT NULL,
  `make` varchar(20),
  `model` varchar(50),
  `yom` int,
  `color` varchar(20),
  `description` varchar(200),
  `closeTime` datetime,
  `initialPrice` int,
  `minSellPrice` int,
  `minBidIncrement` int,
  `category` text,
  `title` varchar(255),
  `balanceUpdated` boolean,
  PRIMARY KEY (`itemID`),
  FOREIGN KEY (`userID`) REFERENCES `users` (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE `bids` (
  `bidID` int AUTO_INCREMENT,
  `itemID` int NOT NULL,
  `userID` int NOT NULL,
  `bidDate` date,
  `bidAmount` float NOT NULL,
  `autoBid` float,
  PRIMARY KEY (`bidID`),
  FOREIGN KEY (`itemID`) REFERENCES `items` (`itemID`),
  FOREIGN KEY (`userID`) REFERENCES `users` (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE `alerts` (
  `alertID` int AUTO_INCREMENT,
  `userID` int NOT NULL,
  `make` varchar(20),
  `model` varchar(50),
  `yom` int,
  `color` varchar(20),
  PRIMARY KEY (`alertID`),
  FOREIGN KEY (`userID`) REFERENCES `users` (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE IF NOT EXISTS `chat` (
  `chatID` int AUTO_INCREMENT PRIMARY KEY,
  `chatter1UserID` int NOT NULL,
  `chatter2UserID` int NOT NULL,
  CONSTRAINT `fk_chatter1` FOREIGN KEY (`chatter1UserID`) REFERENCES `users` (`userID`),
  CONSTRAINT `fk_chatter2` FOREIGN KEY (`chatter2UserID`) REFERENCES `users` (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE IF NOT EXISTS `messages` (
  `messageID` int AUTO_INCREMENT PRIMARY KEY,
  `chatID` int NOT NULL,
  `senderUserID` int NOT NULL,
  `message` text NOT NULL,
  `timestamp` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  CONSTRAINT `fk_chatID` FOREIGN KEY (`chatID`) REFERENCES `chat` (`chatID`),
  CONSTRAINT `fk_senderUserID` FOREIGN KEY (`senderUserID`) REFERENCES `users` (`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE IF NOT EXISTS `payments` (
  `paymentID` int AUTO_INCREMENT,
  `transactionID` int NOT NULL,
  `itemID` int NOT NULL,
  `buyerID` int NOT NULL,
  `sellerID` int NOT NULL,
  `paymentAmount` float NOT NULL,
  `paymentDate` datetime NOT NULL,
  PRIMARY KEY (`paymentID`),
  FOREIGN KEY (`transactionID`) REFERENCES `transactions`(`transactionID`),
  FOREIGN KEY (`itemID`) REFERENCES `items`(`itemID`),
  FOREIGN KEY (`buyerID`) REFERENCES `users`(`userID`),
  FOREIGN KEY (`sellerID`) REFERENCES `users`(`userID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;



